
@page "{id}"
@model Sphinx_Mustafa.Pages.Client.ClientDetailsModel
@{
    ViewData["Title"] = "Client Details";
}

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="text-center">Client Details</h2>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Client.Id" />
            <h3 class="text-center">@Model.Client.Name</h3>
            <p><strong>Code:</strong> @Model.Client.Code</p>
            <p><strong>Class:</strong> @Model.Client.Class</p>
            <p><strong>State:</strong> @Model.Client.State</p>
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-header bg-secondary text-white">
            <h2 class="text-center">Client Products</h2>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Product Name</th>
                        <th>License</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Client.ClientProducts.OrderBy(cp => cp.ProductName))
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.License</td>
                            <td>@product.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@product.EndDate</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>  
    </div>
</div>
