@page "{clientId}/{productId}"
@model Sphinx_Mustafa.Pages.ClientProduct.UpdateClientProductModel
@{
    ViewData["Title"] = "Update Product to Client";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-white text-center">
                    <h2>Update Client Product</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="ClientProductDto.ClientId" class="form-label"></label>
                            <select asp-for="ClientProductDto.ClientId" asp-items="Model.ClientList" class="form-control">
                                <option value="">-- Select Client --</option>
                            </select>
                            <span asp-validation-for="ClientProductDto.ClientId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ClientProductDto.ProductId" class="form-label"></label>
                            <select asp-for="ClientProductDto.ProductId" asp-items="Model.ProductList" class="form-control">
                                <option value="">-- Select Product --</option>
                            </select>
                            <span asp-validation-for="ClientProductDto.ProductId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ClientProductDto.StartDate" class="form-label"></label>
                            <input asp-for="ClientProductDto.StartDate" class="form-control" type="date" />
                            <span asp-validation-for="ClientProductDto.StartDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ClientProductDto.EndDate" class="form-label"></label>
                            <input asp-for="ClientProductDto.EndDate" class="form-control" type="date" />
                            <span asp-validation-for="ClientProductDto.EndDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ClientProductDto.License" class="form-label"></label>
                            <input asp-for="ClientProductDto.License" class="form-control" />
                            <span asp-validation-for="ClientProductDto.License" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Save</button>
                            <a asp-page="./GetCLientProducts" class="btn btn-dark">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
