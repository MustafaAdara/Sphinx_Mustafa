@page
@model Sphinx_Mustafa.Pages.Products.AddProductModel
@{
    ViewData["Title"] = "Add Product";
}

<h1>Add New Product</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="ProductDto.Name"></label>
        <input asp-for="ProductDto.Name" class="form-control" />
        <span asp-validation-for="ProductDto.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductDto.Description"></label>
        <input asp-for="ProductDto.Description" class="form-control" />
        <span asp-validation-for="ProductDto.Description" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="ProductDto.IsActive" class="form-check-input" type="checkbox" />
        <label asp-for="ProductDto.IsActive" class="form-check-label"></label>
        <span asp-validation-for="ProductDto.IsActive" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Product</button>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}