 @page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 mb-4">Welcome to the Management Dashboard</h1>
        <p class="lead mb-5">Manage Clients, Products, and Client Products with ease</p>
    </div>

    <div class="row text-center">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Client Management</h5>
                    <p class="card-text">View, add, and update client information.</p>
                    <a class="btn btn-primary" asp-area="" asp-page="/Client/Index">Go to Clients</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Client Products</h5>
                    <p class="card-text">Manage products associated with clients.</p>
                    <a class="btn btn-primary" asp-area="" asp-page="/ClientProduct/GetCLientProducts">Manage Client Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Product Management</h5>
                    <p class="card-text">Manage the product catalog and updates.</p>
                    <a class="btn btn-primary" asp-area="" asp-page="/Products/Index">Manage Products</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
